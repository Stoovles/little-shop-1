<h2>Order: <%= @order.id %></h2>
<div class="order-card">
  <p>Created: <%= @order.created_at %></p>
  <p>Last Update: <%= @order.updated_at %></p>
  <p>Status: <%= @order.status %></p> <!-- enums -->
  <% @order.items.each do |item| %>
  <div class="item-card">
    <h3><%= link_to item.item_name, item_path(item)%></h3>
    <div class="image-container">
      <img src="<%= item.image_url%>" alt="image of <%= item.item_name %>" class="small-image">
    </div>
    <p><%= item.merchant_name %></p>
    <p><%= item.description %></p>
    <h4><%= item.order_price(@order) %></h4>
    <h4><%= item.order_quantity(@order) %></h4>

    <div class="total">
      <%= item.subtotal(@order) %>
    </div>

    </div>
  <% end %>
  <p>Item Quantity: <%= @order.item_quantity %></p>
  <p>Total: <%= @order.total %></p>
</div>
