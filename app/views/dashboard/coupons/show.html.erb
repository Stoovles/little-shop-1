<h2><%= @coupon.name %></h2>

<h3>Info</h3>
<% if @coupon.percent? %>
  <p><%= @coupon.amount %>% off</p>
<% elsif @coupon.dollar? %>
  <p>$<%= number_to_currency(@coupon.amount) %> off</p>
<% end %>

<h3>Coupon used by: </h3>
<% @users.each do |user| %>
  <ul>
    <li><%= user.name %></li>
  </ul>
<% end %>
