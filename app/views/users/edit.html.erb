    <%= form_for @user do |f| %>
      <%= f.error_messages %>

      <%= f.label :name %>
      <%= f.text_field :name, :required => true%>

      <%= f.label :street_address %>
      <%= f.text_field :street_address, :required => true %>

      <%= f.label :city %>
      <%= f.text_field :city, :required => true %>

      <%= f.label :state %>
      <%= f.text_field :state, :required => true %>

      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, :required => true %>

      <%= f.label :email_address %>
      <%= f.email_field :email_address, :required => true %>

      <%= f.label :password%>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation%>

      <%= f.submit "Update my account" %>
    <% end %>
